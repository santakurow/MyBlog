<main>
  <div class="container">
    <div class="row">
      <div class="col s12">
        <% @posts.each do |post| %>
          <div class="card-panel">
          <div class="card-title"><%= post.user.name %></div>
            <span class="black-text">
              <%= simple_format(post.text) %>
            </span>
            <% if user_signed_in? && current_user.id == post.user_id %>
            <div class="card-action">
              <i class="material-icons">edit</i><%= link_to "編集", edit_post_path(post.id), class: "edit" %>
              <i class="material-icons">warning</i><%= link_to "削除", "/posts/#{post.id}", class: "delete", method: :delete %>
            </div>
            <% end %>
            <div class="date"><%= post.created_at.strftime("%Y年%m月%d日 %H:%M") %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>